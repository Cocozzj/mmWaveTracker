<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    >

    <ListView
        android:id="@+id/perm_permissionsLv"
        style="@style/ListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/perm_tv"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:divider="@color/white"
        android:dividerHeight="1.5dp">

    </ListView>

    <TextView
        android:id="@+id/perm_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/perm_bt"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="@string/perm_text"
        android:textColor="@color/red"
        android:textSize="17sp">
    </TextView>

    <Button
        android:id="@+id/perm_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:background="@drawable/button_color_change"
        android:clickable="true"
        android:textColor="@color/white"
        android:text="@string/perm_continue">

    </Button>

</RelativeLayout>
