<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UI.FragmentMain3">

       <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/ping_enabled_title"
        android:text="Ping Enabled?"
        android:background="@drawable/cell_shape"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:typeface="monospace"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintDimensionRatio="10:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/ping_enabled_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Yes"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:background="@drawable/cell_shape"
        app:layout_constraintLeft_toRightOf="@id/ping_enabled_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/ping_enabled_title"
        />


    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/tcpdump"
        android:text="TCPDUMP"
        android:background="@drawable/cell_shape"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:typeface="monospace"
        app:layout_constraintTop_toBottomOf="@id/ping_enabled_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintDimensionRatio="10:1" />

    <TextView
        android:id="@+id/tcpdump_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="-"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:background="@drawable/cell_shape"
        app:layout_constraintLeft_toRightOf="@id/tcpdump"
        app:layout_constraintTop_toBottomOf="@id/ping_enabled_tv"
        app:layout_constraintBottom_toBottomOf="@id/tcpdump"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/tracer_interval_title"
        android:text="Trace Interval"
        android:background="@drawable/cell_shape"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:typeface="monospace"
        app:layout_constraintTop_toBottomOf="@id/tcpdump"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintDimensionRatio="10:1" />

    <TextView
        android:id="@+id/tracer_interval_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="- ms"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:background="@drawable/cell_shape"
        app:layout_constraintLeft_toRightOf="@id/tracer_interval_title"
        app:layout_constraintTop_toBottomOf="@id/tcpdump_tv"
        app:layout_constraintBottom_toBottomOf="@id/tracer_interval_title"
        app:layout_constraintRight_toRightOf="parent" />

